# PawMatch - Production Environment Configuration
# This file contains template values for production deployment
# Copy this to .env.production and update with actual production values

# Supabase Production Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-production-supabase-url.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Auth Configuration
EXPO_PUBLIC_AUTH_REDIRECT_URL=https://your-domain.com/auth/confirm
EXPO_PUBLIC_AUTH_MOBILE_REDIRECT_URL=pawmatch://auth/confirm
EXPO_PUBLIC_DEV_IP_ADDRESS=production-server-ip
EXPO_PUBLIC_OAUTH_REDIRECT_URL=pawmatch://auth/confirm

# App Configuration
APP_ENV=production
APP_VERSION=1.0.0
DEBUG_MODE=false
EXPO_PUBLIC_DEBUG_AUTH=false

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# OpenAI Configuration (for AI Vet feature)
# Get your API key from: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Feature Flags
ENABLE_REAL_DATABASE=true

# Security Configuration
ENABLE_RATE_LIMITING=true
ENABLE_CORS_PROTECTION=true
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
ENABLE_CACHING=true
CACHE_DURATION=3600
IMAGE_OPTIMIZATION=true

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=firebase
SENTRY_DSN=your-sentry-dsn

# SMTP Configuration (Set in Supabase Dashboard)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password